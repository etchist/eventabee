{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@eventabee/event-core": ["libs/event-core/src/index.ts"],
      "@eventabee/shopify-client": ["libs/shopify-client/src/index.ts"],
      "@eventabee/segment-client": ["libs/segment-client/src/index.ts"],
      "@eventabee/facebook-client": ["libs/facebook-client/src/index.ts"],
      "@eventabee/shared-utils": ["libs/shared-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}