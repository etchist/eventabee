{
  "name": "eventabee",
  "version": "1.0.0",
  "private": true,
  "description": "Shopify event tracking app with Segment and Facebook integrations",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "dev": "nx run shopify-app:serve",
    "dev:ui": "nx run admin-ui:serve",
    "dev:all": "nx run-many --target=serve --projects=shopify-app,admin-ui --parallel",
    "affected:build": "nx affected --target=build",
    "affected:test": "nx affected --target=test",
    "affected:lint": "nx affected --target=lint",
    "shopify:dev": "shopify app dev",
    "shopify:deploy": "shopify app deploy"
  },
  "keywords": [
    "shopify",
    "analytics",
    "segment",
    "facebook",
    "event-tracking"
  ],
  "author": "",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*",
    "packages/*"
  ],
  "devDependencies": {
    "@nx/eslint": "^21.2.2",
    "@nx/express": "^21.2.2",
    "@nx/jest": "^21.2.2",
    "@nx/next": "^21.2.2",
    "@nx/node": "^21.2.2",
    "@nx/react": "^21.2.2",
    "@nx/webpack": "^21.2.2",
    "@nx/workspace": "^21.2.2",
    "@swc/core": "^1.12.9",
    "@swc/jest": "^0.2.38",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "nx": "^21.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.9"
  },
  "dependencies": {
    "@shopify/app-bridge": "^3.7.10",
    "@shopify/app-bridge-react": "^4.2.0",
    "@shopify/app-bridge-utils": "^3.5.1",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-api": "^11.13.0",
